<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="skedge.yr.yr.skedge.empty"
    android:background="#303030"
    android:layoutDirection="ltr">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="מה שם הקורס?"
        android:id="@+id/textView6"
        android:textColor="#ffffff"

        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:layout_alignParentTop="true"
        android:id="@+id/relative1"
        android:background="@drawable/searchmenu10"
        android:layout_marginTop="30dp">


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="איפה אני לומד אז?"
            android:id="@+id/WhereButton"
            android:background="#00ffffff"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:onClick="SearchForMe"/>

        <AutoCompleteTextView
            android:layout_width="160dp"
            android:layout_height="45dp"
            android:id="@+id/AutoCom"
            android:hint="שם קורס"
            android:textColor="#ffffff"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:textColorHint="#FFB1B1B1"
            android:textSize="18dp"
            android:layout_marginRight="9dp"
            android:dropDownWidth="350dp"
            android:dropDownVerticalOffset="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="יום ראשון"
            android:id="@+id/TextDayS"
            android:layout_marginEnd="18dp"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:layout_alignBaseline="@+id/SpinDay1"
            android:layout_alignBottom="@+id/SpinDay1"
            android:layout_alignEnd="@+id/SpinDay1"
            android:layout_marginTop="3dp" />

        <Spinner
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:id="@+id/SpinDay1"
            android:backgroundTint="#00ffffff"
            android:spinnerMode="dropdown"
            android:layout_alignBottom="@+id/AutoCom"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/AutoCom"
            android:dropDownVerticalOffset="45dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="10dp" />


    </RelativeLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView2"
        android:layout_below="@+id/relative1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ובאיזה יום?"
        android:id="@+id/textView7"
        android:textColor="#ffffff"


        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="34dp" />


</RelativeLayout>
