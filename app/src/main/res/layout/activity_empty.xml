<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="skedge.yr.yr.skedge.empty"
    android:background="#303030"
    android:layoutDirection="ltr">


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView7"
        android:layout_marginTop="10dp" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView7"
        android:layout_alignParentTop="true"
        android:background="@drawable/searchmenu9"
        android:layout_alignEnd="@+id/SpinHour"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <Spinner
        android:layout_width="105dp"
        android:layout_height="45dp"
        android:backgroundTint="#00ffffff"
        android:id="@+id/SpinHour"
        android:spinnerMode="dropdown"
        android:layout_alignEnd="@+id/listView"
        android:layout_alignParentTop="true"
        android:dropDownVerticalOffset="40dp"
        android:layout_marginTop="25dp" />

    <Spinner
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:backgroundTint="#00ffffff"
        android:id="@+id/SpinDay"
        android:spinnerMode="dropdown"
        android:dropDownVerticalOffset="40dp"
        android:layout_alignTop="@+id/imageView7"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="110dp"
        android:layout_height="45dp"
        android:backgroundTint="#00ffffff"
        android:id="@+id/SpinBuild"
        android:textAlignment="center"

        android:foregroundGravity="center_vertical|center_horizontal"
        android:gravity="center_vertical"

        android:spinnerMode="dropdown"
        android:dropDownVerticalOffset="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:layout_toStartOf="@+id/SpinDay" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="08:00"
        android:id="@+id/TextviewH"
        android:textColor="#ffffff"
        android:layout_marginEnd="22dp"
        android:textSize="17dp"
        android:layout_alignBottom="@+id/SpinHour"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="בניין 14"
        android:id="@+id/TextviewB"
        android:textColor="#ffffff"
        android:textSize="17dp"
        android:layout_marginEnd="21dp"
        android:layout_alignTop="@+id/TextviewH"
        android:layout_alignEnd="@+id/SpinBuild" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="יום ראשון"
        android:id="@+id/TextviewD"
        android:textColor="#ffffff"
        android:textSize="17dp"
        android:layout_alignTop="@+id/TextviewB"
        android:layout_alignEnd="@+id/SpinDay"
        android:layout_marginEnd="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="מצא לי כיתה"
        android:id="@+id/textView8"
        android:layout_above="@+id/listView"
        android:layout_marginBottom="9dp"
        android:textColor="#181818"
        android:textSize="18dp"
        android:textAlignment="center"
        android:layout_alignEnd="@+id/imageView7"
        android:layout_alignParentStart="true"
        android:onClick="exp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ממתי?"
        android:id="@+id/textView10"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/TextviewH" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="באיזה יום?"
        android:id="@+id/textView11"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/TextviewD" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="בניין?"
        android:id="@+id/textView12"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/textView11"
        android:layout_alignStart="@+id/TextviewB" />


</RelativeLayout>
