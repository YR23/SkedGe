<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="skedge.yr.yr.skedge.empty"
    android:background="#303030"
    android:layoutDirection="ltr">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="עד איזה שעה?"
        android:id="@+id/textView6"
        android:textColor="#ffffff"

        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:layout_alignParentTop="true"
        android:id="@+id/relative1"
        android:background="@drawable/searchmenu11"
        android:layout_marginTop="30dp">


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="אני פה"
            android:id="@+id/CheckButton1"
            android:background="#00ffffff"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:onClick="AddContact"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="יום ראשון"
            android:id="@+id/TextHour3"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:layout_alignTop="@+id/TextMany2"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="28dp" />

        <Spinner
            android:layout_width="165dp"
            android:layout_height="45dp"
            android:id="@+id/SpinHowMany2"
            android:backgroundTint="#00ffffff"
            android:spinnerMode="dropdown"
            android:layout_alignBottom="@+id/AutoCom"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/AutoCom"
            android:dropDownVerticalOffset="45dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="1"
            android:id="@+id/TextMany2"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:layout_alignBottom="@+id/SpinHowMany2"
            android:layout_alignEnd="@+id/SpinHowMany2"
            android:layout_marginEnd="24dp" />

        <Spinner
            android:layout_width="160dp"
            android:layout_height="45dp"
            android:id="@+id/SpinHour2"
            android:backgroundTint="#00ffffff"
            android:spinnerMode="dropdown"
            android:dropDownVerticalOffset="45dp"
            android:layout_marginRight="10dp"
            android:layout_alignBottom="@+id/TextHour3"
            android:layout_toEndOf="@+id/SpinHowMany2" />


    </RelativeLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="כמה תהיו?"
        android:id="@+id/textView7"
        android:textColor="#ffffff"


        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="34dp" />


</RelativeLayout>
