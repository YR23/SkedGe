<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="skedge.yr.yr.skedge.Micro"
    android:background="#303030"
    android:layoutDirection="ltr">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:layout_alignParentTop="true"
        android:id="@+id/relative1"
        android:background="@drawable/searchmenu11"
        android:layout_marginTop="25dp">


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="עזור לי פה עם המיקרו"
            android:id="@+id/MicroButton"
            android:background="#00ffffff"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
          />


        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="בניין 15 "
            android:id="@+id/TextBuildS"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:layout_marginEnd="36dp"
            android:layout_alignBottom="@+id/SpinBuild1"
            android:layout_alignEnd="@+id/SpinBuild1" />

        <Spinner
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:id="@+id/SpinBuild1"
            android:backgroundTint="#00ffffff"
            android:spinnerMode="dropdown"
            android:layout_alignParentStart="true"
            android:dropDownVerticalOffset="45dp"
            android:layout_marginTop="2dp" />

        <Spinner
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:id="@+id/SpinHour1"
            android:backgroundTint="#00ffffff"
            android:spinnerMode="dropdown"
            android:dropDownVerticalOffset="45dp"
            android:layout_above="@+id/WhereButton"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="08:00"
            android:id="@+id/TextHourS"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:layout_marginEnd="51dp"
            android:layout_alignTop="@+id/TextBuildS"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

    <ImageView
        android:layout_width="320dp"
        android:layout_height="380dp"
        android:id="@+id/ImageMicro"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/relative1"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/TextMicro2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#f4f4f4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="מתי תחמם?"
        android:id="@+id/textView13"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/ImageMicro"
        android:layout_marginEnd="28dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ובאיזה בניין?"
        android:id="@+id/textView14"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/ImageMicro"
        android:layout_marginStart="27dp" />


</RelativeLayout>
